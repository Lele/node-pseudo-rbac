{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "declaration":true,
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "exclude": [
    "lib/*",
    "node_modules",
    "coverage",
    "types",
    "src/__tests__/*",
    "src/examples/*"
  ]
}
